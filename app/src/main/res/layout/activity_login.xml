<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_dark"
    android:orientation="vertical"
    tools:context=".activity.SignUpActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            >

            <TextView
                android:id="@+id/tvNewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_login_create_account"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="16sp"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/horizontallogo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="@string/text_login"
            android:layout_margin="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:gravity="center"
            >


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayoutSignUpEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/green_dark"
                android:layout_margin="5dp"
                app:boxBackgroundColor="@color/green_light"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietEmialLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text"
                    android:hint="@string/hint_email"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/yellow"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayoutPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/green_dark"
                android:layout_margin="5dp"
                app:boxBackgroundColor="@color/green_light"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietPassLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text"
                    android:hint="@string/hint_password"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textColor="@color/yellow"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_light"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="@string/text_login"
                android:layout_margin="30dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvGoogleLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:text="@string/text_google"
                android:background="@drawable/bg_google_btn"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tvFacebookLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:text="@string/text_facebook"
                android:background="@drawable/bg_facebook_btn"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/yellow"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>